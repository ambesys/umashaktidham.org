#############################################
# UMA SHAKTI DHAM - Public .htaccess
# Front-controller rewrite and basic hardening (public webroot)
#############################################

# Treat index.php as the default document
DirectoryIndex index.php index.html

# Disable directory listing for security
Options -Indexes

# Allow the site to be served (Apache 2.4+ / 2.2 fallback)
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>

# Basic security headers (only if mod_headers enabled)
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    Header always set X-XSS-Protection "1; mode=block"

    # Allow font files to be loaded cross-origin (useful for CDN or font hosting)
    <FilesMatch "\.(ttf|otf|eot|woff|woff2|svg)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Optional: Force HTTPS and canonical host (www)
# Enable this in production. This forces requests to https://www.umashaktidham.org
<IfModule mod_rewrite.c>
    RewriteEngine On
    # If the host is not the canonical one or HTTPS is off, redirect.
    RewriteCond %{HTTP_HOST} !^www\.umashaktidham\.org$ [NC,OR]
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://www.umashaktidham.org%{REQUEST_URI} [L,R=301]
</IfModule>

# Restrict direct access to PHP files except index.php
# Prevents serving internal PHP scripts directly (Apache 2.4+ and 2.2 fallback)
<IfModule mod_authz_core.c>
    <FilesMatch "^(?!index\.php$).+\.php$">
        Require all denied
    </FilesMatch>
</IfModule>
<IfModule !mod_authz_core.c>
    <FilesMatch "^(?!index\.php$).+\.php$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</IfModule>

# Deny requests for dotfiles (like .git/, .env, .htpasswd) and other sensitive files
# This prevents exposing repo metadata or environment files when the repo lives in webroot.
<IfModule mod_authz_core.c>
    <FilesMatch "^\.">
        Require all denied
    </FilesMatch>
    <FilesMatch "(^debug-access\.php$|\.(env|sql|sql\.gz|bak|log|ini|sh|ps1|pem|crt|key|lock))$">
        Require all denied
    </FilesMatch>
</IfModule>
<IfModule !mod_authz_core.c>
    <FilesMatch "^\.">
        Order allow,deny
        Deny from all
    </FilesMatch>
    <FilesMatch "(^debug-access\.php$|\.(env|sql|sql\.gz|bak|log|ini|sh|ps1|pem|crt|key|lock))$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</IfModule>

# Serve existing files/directories directly, otherwise route to index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # If request matches an existing file or directory, do nothing
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise rewrite to front controller
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Deny access to commonly sensitive directories if accidentally present
<IfModule mod_rewrite.c>
    RewriteRule ^(src|config|vendor|database|tests|\.git)(/|$) - [F,NC,L]
</IfModule>

# Simple caching for static assets (optional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/ttf "access plus 1 month"
</IfModule>

# End of public .htaccess
