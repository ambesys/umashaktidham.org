# Uma Shakti Dham - Repository Root .htaccess
# This file protects repository files when DOCUMENT_ROOT is set to public/
# It should NOT contain rewrite rules as it's outside the web root

# Deny access to sensitive repository files
<FilesMatch "^\.|(composer\.json|composer\.lock|README|\.git|\.env)(.*)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to PHP files in repository root (but allow if explicitly needed)
<FilesMatch "\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to public directory
<FilesMatch "^$">
    Order allow,deny
    Allow from all
</FilesMatch>

