{
    "name": "umashaktidham/website",
    "description": "A PHP website for the non-profit organization Uma Shakti Dham.",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Uma Shakti Dham",
            "email": "admin@umashaktidham.org"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "guzzlehttp/guzzle": "^7.0",
        "league/oauth2-facebook": "^2.2",
        "league/oauth2-google": "^4.0",
        "monolog/monolog": "^2.0",
        "phpmailer/phpmailer": "^7.0",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.0",
        "web-auth/webauthn-lib": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=coverage",
        "post-install-cmd": [
            "echo 'Installation complete. Remember to:'",
            "echo '1. Copy .env.example to .env and configure your settings'",
            "echo '2. Run database migrations'",
            "echo '3. Set proper file permissions'"
        ],
        "post-update-cmd": [
            "echo 'Update complete. Check for any database migrations needed.'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
